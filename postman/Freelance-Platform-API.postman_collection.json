		{
			"name": "Gig Management",
			"item": [
				{
					"name": "Create Gig",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('gigId', response.data.gig._id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Build React E-commerce Website\",\n  \"description\": \"Need a modern e-commerce website built with React, Node.js, and MongoDB. Should include user authentication, product catalog, shopping cart, and payment integration. Looking for an experienced developer who can deliver high-quality code.\",\n  \"budget\": 2500\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/gigs",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs"]
						}
					}
				},
				{
					"name": "Browse All Gigs (Public)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/gigs?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "sortBy",
									"value": "createdAt"
								},
								{
									"key": "sortOrder",
									"value": "desc"
								}
							]
						}
					}
				},
				{
					"name": "Search Gigs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/gigs?search=react&page=1&limit=5",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs"],
							"query": [
								{
									"key": "search",
									"value": "react"
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "5"
								}
							]
						}
					}
				},
				{
					"name": "Get Single Gig",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/gigs/{{gigId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs", "{{gigId}}"]
						}
					}
				},
				{
					"name": "Update Gig",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Build Advanced React E-commerce Platform\",\n  \"budget\": 3000\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/gigs/{{gigId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs", "{{gigId}}"]
						}
					}
				},
				{
					"name": "Get My Gigs",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/gigs/user/my-gigs?status=open",
							"host": ["{{baseUrl}}"],
							"path": ["api", "gigs", "user", "my-gigs"],
							"query": [
								{
									"key": "status",
									"value": "open"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Bidding System",
			"item": [
				{
					"name": "Submit Bid",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('bidId', response.data.bid._id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{freelancerToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"gigId\": \"{{gigId}}\",\n  \"message\": \"I have 5 years of experience building React e-commerce applications. I can deliver this project within 3 weeks with clean, maintainable code. My portfolio includes similar projects with payment integration and modern UI/UX.\",\n  \"price\": 2200\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/bids",
							"host": ["{{baseUrl}}"],
							"path": ["api", "bids"]
						}
					}
				},
